#! /usr/bin/env python3
# -*- coding: UTF-8 -*-

import algos
from sys import exit
from helpers import printerr, read_args

def main():
    als = algos.get_algos()

    width, algo, flags = read_args(als)

    if flags.info:
        if flags.info not in als:
            unknown_algo_error(flags.info, als)

        f, sd = als[flags.info]
        print("%s: %s\n%s" % (flags.info.capitalize(), sd, f.__doc__))
        exit(0)

    if algo and algo not in als:
        unknown_algo_error(algo, als)

    fn, _ = als[algo]
    res = fn(input(), width)
    for line in res:
        print(line)


if __name__ == '__main__':
    main()
